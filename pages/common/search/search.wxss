/* 搜索框 */
.search{
  position: relative;
  background-color: #F4F4F4;
  height: 128rpx;
  padding: 32rpx 0;
  box-sizing: border-box;
}
.searchicon{
  position: absolute;
  margin: 20rpx 0 20rpx 40rpx;
}
.search-input{
  width: 710rpx;
  height: 66rpx;
  background-color: #FFFFFF;
  border: solid 2rpx #D0D0D0;
  border-radius: 10rpx;
  margin: 0 auto;
  color: #C8C8C8;
  font-size: 28rpx;
  padding-left: 66rpx;
  box-sizing: border-box;
}

/* 热卖搜索内容 */
.hotsearch-content{
  padding: 60rpx 0 0 62rpx;
  box-sizing: border-box;
}
/* 热卖搜索标题 */
.hcTitle{
  color: #D0D1D1;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
/* 热卖搜索详细小标题 */
.hcDetail{
  width: 520rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.hcdTitle{
  width: 110rpx;
  height: 46rpx;
  border: solid 2rpx #999899;
  text-align: center;
  line-height: 46rpx;
  color: #666;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
/* 搜索结果空 */
.empty {
  width: 100%;
  text-align: center;
  padding-top: 50%;
}
.emptyimg {
  width: 228rpx;
  height: 204rpx;
}
.emptytxt {
  color: #999999;
  font-size: 28rpx;
}
/*搜索列表  */
.reachList{
  height: 99rpx;
  width:94%;
  margin-left: 3%;
  float: left; 
  border-bottom: 1rpx solid #CCCCCC;
  font-size:34rpx;
font-family:SourceHanSansSC-Medium;
font-weight:500;
color:#999999;
line-height: 98rpx;
}

/* 店铺列表 */

.store {
  float: left;
  margin-top: 30rpx;
  width: 345rpx;
  height: 399rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.storeImg {
  height: 232rpx;
  width: 345rpx;
  float: left;
}

.storeImg image {
  height: 232rpx;
  width: 345rpx;
  float: left;
}

.storeTitle {
  float: left;
  margin-top: 33rpx;
  width: 100%;
  height: 28rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #333;
  line-height: 28rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.storeSearch {
  width: 100%;
  height: 22rpx;
  font-size: 20rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #333;
  text-align: center;
  float: left;
}

.storeDetail {
  width: 100%;
  height: 20rpx;
  font-size: 20rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #999;
  text-align: center;
  float: left;
  margin-top: 16rpx;
}
