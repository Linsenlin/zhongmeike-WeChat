/* pages/customization/schemeOne.wxss */
page{
  background-color: #fafafa;
  width: 100%;
  height: 100%;
}
.body {
  float: left;
  background: #fafafa;
  width: 100%;
  border-top: 1rpx solid #CCCCCC;
}

/* 制定方案部分 */

.deter {
  margin-top: 60rpx;
  float: left;
  height: 260rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.deterOne {
  margin-bottom: 1%;
  margin-right: 20rpx;
  float: left;
  margin-left: 20rpx;
  width: 490rpx;
  height: 200rpx;
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.scrollItem {
  width: 65%;
  display: inline-block;
  margin-right: 22rpx;
  margin-left: 20rpx;
}

.deterTwo {
  margin-right: 20rpx;
  float: left;
  margin-left: 20rpx;
  width: 490rpx;
  height: 260rpx;
  background: #fff;
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.deterTitle {
  margin-top: 40rpx;
  text-align: center;
  width: 100%;
  height: 28rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #333;
}

.deterDetail {
  margin-top: 30rpx;
  margin-left: 66rpx;
  text-align: center;
  width: 359rpx;
  height: 75rpx;
  font-size: 20rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 500;
  color: #999;
  line-height: 28rpx;
}

.deterPrice {
  text-align: center;
  margin-top: 1%;
  width: 100%;
  height: 20rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #303030;
  line-height: 28rpx;
}

/* 套餐介绍部分 */

.scheme {
  float: left;
  margin-left: 20rpx;
  margin-top: 51rpx;
  /* width: 710rpx; */
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  background: #fff;
}

.product {
  width: 355rpx;
  height: 342rpx;
  float: left;
  border: 1rpx solid #EEEEEE;
 
}

.product image {
  height: 138rpx;
  width: 110rpx;
  margin-left: 135rpx;
  margin-top: 48rpx;
  float: left;
}

.productTitle {
  text-align: center;
  float: left;
  margin-top: 40rpx;
  width: 100%;
  height: 23rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: #333;
  line-height: 28rpx;
}

.productDetail {
  float: left;
  text-align: center;
  margin-top: 11rpx;
  width: 100%;
  height: 20rpx;
  font-size: 20rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 500;
  color: #999;
  line-height: 28rpx;
}

.productPrice {
  float: left;
  text-align: center;
  margin-top: 21rpx;
  width: 100%;
  height: 20rpx;
  font-size: 20rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #333;
  line-height: 28rpx;
  margin-bottom: 10%;
}

/* 进一步了解部分 */

.detail {
  width: 100%;
  height: 24rpx;
  /* border: 1rpx solid #99d2ea; */
  float: left;
  margin-top: 63rpx;
  margin-bottom: 200rpx;
}

.detail image {
  height: 28rpx;
  width: 28rpx;
  float: left;
}

.detail text {
  width: 50%;
  text-align: right;
  margin-right: 10rpx;
  float: left;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: #333;
  line-height: 28rpx;
}

/* 底部按钮 */

.footerBtn {
  position: fixed;
  bottom: 0rpx;
  float: left;
  margin-top: 91rpx;
  width: 100%;
  height: 98rpx;
  background: #fff;
}
.leftBtn {
  float: left;
  width: 50%;
  height: 98rpx;
  background: rgba(250, 250, 250, 1);
  font-size: 34rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 900;
  color: #333;
  text-align: center;
  line-height: 98rpx;
  box-shadow:0px 0px 16px 0px rgba(0, 0, 0, 0.1);
}

.rightBtn {
  float: left;
  width: 50%;
  height: 98rpx;
  background: #000;
  font-size: 34rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 900;
  color: #fffeff;
  text-align: center;
  line-height: 98rpx;
}
