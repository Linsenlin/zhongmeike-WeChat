/* pages/mine/myFenXiaoRewardList.wxss */

page {
  background: #f5f5f5;
}

.body {
  width: 100%;
  height: 100%;
  float: left;
}

.line {
  float: left;
  width: 750rpx;
  height: 15rpx;
  background: #F5F5F5;
}

.body_content {
  margin-top: 2%;
  width: 750rpx;
  height: 98rpx;
  background: #FFF;
}

.body_img {
  float: left;
  width: 80rpx;
  height: 80rpx;
  padding-top: 8rpx;
  margin-left: 20rpx;
}

.body_img image {
  width: 80rpx;
  height: 80rpx;
  float: left;
}

.body_text {
  width: 50%;
  height: 100%;
  float: left;
}

.body_text_name {
  width: 100%;
  height: 30%;
  margin-left: 5%;
  padding-top: 3%;
  float: left;
  font-size: 24rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 500;
  color: #000;
}

.body_text_name text {
  width: 100%;
  height: 30%;
  float: left;
  font-size: 20rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 500;
  color: #999999;
}

.body_rigth {
  margin-right: 3%;
  text-align: right;
  width: 30%;
  height: 100%;
  float: right;
}

.body_rigth_price {
  width: 100%;
  height: 40%;
  float: right;
  padding-top: 5%;
  font-size: 20rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 500;
  color: #000;
}

.body_rigth_price text {
  font-size: 20rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 500;
  color: #333333;
}

.body_rigth_time {
  width: 100%;
  height: 30%;
  float: right;
  font-size: 20rpx;
  font-family: SourceHanSansSC-Medium;
  font-weight: 500;
  color: #999;
}
