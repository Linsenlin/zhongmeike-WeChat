.modal_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  overflow: hidden;
  z-index: 9000;
   opacity: 0.3;
}
.modal_body {
  float: left;
  position: fixed;
