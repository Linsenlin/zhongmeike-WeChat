/* 走马灯 */

swiper {
  height: 400rpx;
}

.slide-image {
  width: 100%;
  height: 400rpx;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: -10rpx;
}

.swiper-box .wx-swiper-dot {
  width: 40rpx;
  display: inline-flex;
  height: 6rpx;
  margin-left: 20rpx;
  justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #ccc;
  border-radius: 6rpx;
}

.swiper-box .wx-swiper-dot-active::before {
  background: #fff;
}

